<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:title="Historia Clínica"/>

    <Button
        android:layout_width="160dp"
        android:text="Ficha de Identificación"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClickFicha"/>

    <Button
        android:layout_width="160dp"
        android:text="Antecedentes Patológicos"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:onClick="onClickPato"/>

    <Button
        android:layout_width="160dp"
        android:text="Antecedentes No Patológicos"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:onClick="onClickNoPato"/>

    <Button
        android:layout_width="160dp"
        android:text="Antecedentes Familiares"
        android:layout_height="wrap_content"
        android:layout_weight="4"/>

    <Button
        android:layout_width="160dp"
        android:text="Antecedentes Gineco-obstétricos"
        android:layout_height="wrap_content"
        android:layout_weight="5"/>

    <Button
        android:layout_width="160dp"
        android:text="Exploración física"
        android:layout_height="wrap_content"
        android:layout_weight="6"/>


    </LinearLayout>