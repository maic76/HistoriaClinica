<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android ="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:title="Exploración Física"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (IMC= Índice de Masa Corporal) (la Tensión arterial deberá de ser tomada en 2 posiciones ej.: acostado y sentado) "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signos vitales: "
                android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp">


            <EditText
                android:id="@+id/txtTAI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="T.A.(Brazo izq.)"
                android:layout_margin="10dp"
               />
            <EditText
                android:id="@+id/txtTAD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="T.A.(Brazo der.)"
                android:layout_margin="10dp"

                />

        </LinearLayout>
            <EditText
                android:id="@+id/txtFC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Frec. Cardiaca"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp">
        <EditText
                android:id="@+id/txtFrecR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Frec. Resp."
            android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/txtTemp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="Temp."
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/txtPeso2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="Peso"
                android:layout_margin="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp">
            <EditText
                android:id="@+id/txtTalla2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="Talla"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/txtIMC"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="IMC"
                android:layout_margin="10dp"/>
        </LinearLayout>
            <EditText
                android:id="@+id/txtCabeza"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Cabeza y Cuello"
                android:padding="20dp"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/txtTorax"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Tórax"
                android:padding="20dp"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/txtAbdomen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Abdomen"
                android:padding="20dp"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/txtExtremidades"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Extremidades"
                android:padding="20dp"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/txtNeurologico"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Neurológico y Estado Mental"
                android:padding="20dp"
                android:layout_margin="10dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:onClick="onClickCancelar"
                android:layout_margin="20dp"/>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:onClick="onClickGuardar"
                android:layout_margin="20dp"/>
        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>